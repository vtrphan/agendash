{
  "name": "agendash",
  "version": "2.0.0",
  "description": "Agenda Dashboard",
  "main": "app.js",
  "bin": "bin/agendash-standalone.js",
  "engines": {
    "node": ">=8.9.0"
  },
  "scripts": {
    "test": "run-p lint ava",
    "lint": "xo",
    "ava": "ava -v -c 1",
    "start": "node ./bin/agendash-standalone.js --db=localhost://mongo"
  },
  "keywords": [
    "agenda"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vtrphan/agendash.git"
  },
  "bugs": {
    "url": "https://github.com/vtrphan/agendash/issues"
  },
  "homepage": "https://github.com/vtrphan/agendash#readme",
  "license": "MIT",
  "dependencies": {
    "@hapi/inert": "^6.0.3",
    "agenda": "^3.1.0",
    "async": "^3.2.0",
    "body-parser": "^1.19.0",
    "commander": "^6.2.0",
    "express": "^4.17.1",
    "semver": "^7.3.2"
  },
  "devDependencies": {
    "ava": "^3.13.0",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.0.1",
    "xo": "^0.34.2"
  },
  "xo": {
    "space": 2,
    "rules": {
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "max-params": [
        "error",
        5
      ],
      "max-nested-callbacks": [
        "error",
        5
      ]
    },
    "envs": [
      "node"
    ],
    "ignores": [
      "public/**/*"
    ]
  }
}
